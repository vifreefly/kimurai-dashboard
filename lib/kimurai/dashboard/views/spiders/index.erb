<%= breadcrumbs("/" => "Home", "" => "Spiders") %>

<div class="row">
  <div class="col-lg-12">
    <h1>Spiders</h1>
    <div class="table-responsive">
      <table class="table table-hover table-sm">
        <thead>
          <tr>
            <th scope="col"># id</th>
            <th scope="col">Name</th>
            <th scope="col">Current state</th>
            <th scope="col">Runs</th>
          </tr>
        </thead>
        <tbody>
          <% @spiders.each do |spider| %>
            <tr>
              <th scope="row">
                <a href="/spiders/<%= spider.id %>"><%= spider.id %></a>
              </th>
              <td><%= spider.name %></td>
              <td>
                <%= get_badge(spider.current_state) %>
                <% if session_id = spider.current_session&.id %>
                  (active session <a href="/sessions/<%= session_id %>"><%= session_id %></a>)
                <% end %>
              </td>
              <td>
                <a href="/runs?spider_id=<%= spider.id %>"><%= spider.runs.size %></a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= pagy_nav_bootstrap(@pagy) if @pagy && @pagy.pages > 1 %>
  </div>
</div>
