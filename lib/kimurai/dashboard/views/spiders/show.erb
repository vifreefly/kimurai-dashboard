<%= breadcrumbs("/" => "Home", "/spiders" => "Spiders", "" => @spider.id) %>

<div class="row">
  <div class="col-lg-12">
    <h1><%= @spider.name %></h1>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th>ID</th>
          <td><%= @spider.id %></td>
        </tr>
        <tr>
          <th>Name</th>
          <td><%= @spider.name %></td>
        </tr>
        <tr>
          <th>Current state</th>
          <td>
            <%= get_badge(@spider.current_state) %>
            <% if session_id = @spider.current_session&.id %>
              (active session <a href="/sessions/<%= session_id %>"><%= session_id %></a>)
            <% end %>
          </td>
        </tr>
        <tr>
          <th>Latest log</th>
          <td>
            <a target="_blank" href="/spiders/<%= @spider.id %>/log"><%= @spider.name %>.log</a>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="col-lg-12">
    <h2>Runs</h2>
    <%= erb :'runs/_table', locals: { runs: @spider_runs } %>

    <%= pagy_nav_bootstrap(@pagy) if @pagy && @pagy.pages > 1 %>
  </div>
</div>
